
extends includes/layout

block title
    title Баланс

block content
    .main-container.search-container

        .search__wrapper_top
            .page-title
                h1 Личный кабинет
                a(href='javascript:;').page-title-link.j-page-title-link Личный кабинет
                    .icon-wrapper
                        +icon("triangle",10,10)

        .search__wrapper_content
            aside.search-aside.search-aside_personal
                form.search-form
                    ul.search-form-list
                        li.search-form__item
                            a(href='javascript:;').search-form__link.j-search-form-link Предложения
                                +icon("triangle",10,10)
                            .search-form__inner.search-form__inner_personal.j-inner-list
                                ul
                                    li
                                        a(href='personal-customer__offers-active.html') Активные (1)
                                    li
                                        a(href='personal-customer__offers-expired.html') Просроченные
                                    li
                                        a(href='personal-customer__offers-refused.html') Получен отказ
                                    li
                                        a(href='personal-customer__offers-cancelled.html') Отмененные


                        li.search-form__item
                            a(href='javascript:;').search-form__link.j-search-form-link Мои перевозки
                                +icon("triangle",10,10)
                            .search-form__inner.search-form__inner_personal.j-inner-list
                                ul
                                    li
                                        a(href='personal-customer__transportation-all.html') Все
                                    li
                                        a(href='personal-customer__transportation-accepted.html') Принятые
                                    li
                                        a(href='personal-customer__transportation-embarked.html') Погруженные
                                    li
                                        a(href='personal-customer__transportation-delivered.html') Доставленные
                                    li
                                        a(href='personal-customer__transportation-cancelled.html') Отмененные
                                    li
                                        a(href='personal-customer__transportation-archived.html') В архиве

                        li.search-form__item
                            a(href='javascript:;').search-form__link.j-search-form-link.j-find-request Найти заявки
                                +icon("triangle",10,10)
                            .search-form__inner.search-form__inner_personal.j-inner-list
                                ul
                                    li
                                        a(href='cargo-search.html') Найти груз
                                    li
                                        a(href='personal-customer__followed-requests.html') Отслеживаемые

                        li.search-form__item
                            a(href='personal-customer__calendar.html').search-form__link Календарь

                        li.search-form__item
                            a(href='personal-customer__following-cargo.html').search-form__link Попутный груз

                        li.search-form__item
                            a(href='personal-customer__profile.html').search-form__link Профиль

                        li.search-form__item
                            a(href='personal-customer__transaction-history.html').search-form__link История транзакций

                        li.search-form__item
                            a(href='personal-customer__balance.html').search-form__link Баланс

                        li.search-form__item
                            a(href='personal-customer__messages.html').search-form__link Сообщения

                        li.search-form__item
                            a(href='personal-customer__news.html').search-form__link Лента


            .search-content
                .personal__content-list
                    .title Мой баланс
                    .balance
                        .balance__title Баланс Cursus
                        .balance__sum 15000 рублей
                        .balance__add
                            a(href='#') Пополнить
                        a(href='#').payment-type-link Добавить способ оплаты
                        a(href='#').show-history-link Показать историю
